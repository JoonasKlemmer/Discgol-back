@model IEnumerable<App.DAL.DTO.Wishlist>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="">Create New</a> <!-- Create -->
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.WishlistName)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
